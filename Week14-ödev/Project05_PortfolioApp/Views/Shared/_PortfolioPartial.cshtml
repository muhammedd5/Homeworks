<!-- Portfolio Section -->
<section id="portfolio" class="portfolio section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Projeler</h2>
        <p>Çalışmalarımı incelemek isterseniz, projelerimi aşağıda görebilirsiniz.</p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">

            <ul class="portfolio-filters isotope-filters" data-aos="fade-up" data-aos-delay="100">
                <li data-filter="*" class="filter-active">Tümü</li>
                @foreach (var category in Model.Categories)
                {
                    <li data-filter=".filter-@category.Id">@category.Name</li>
                }
            </ul><!-- End Portfolio Filters -->

            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">

                @foreach (var project in Model.Projects)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-@project.CategoryId">
                        <img src="@project.ImageUrl" class="img-fluid" alt="">
                        <div class="portfolio-info">
                            <h4>@project.Name (@project.ProjectYear)</h4>
                            <p>@project.Description</p>
                            <a href="@project.ImageUrl" title="@project.Name" data-gallery="portfolio-gallery-app"
                                class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                            <a href="@project.GithubUrl" title="Github" class="details-link"><i
                                    class="bi bi-link-45deg"></i></a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section><!-- /Portfolio Section -->