@model ContactModel
<!-- Contact Section -->
<section id="contact" class="contact section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>İletişim</h2>
        <p>Benimle iletişim kurmak için aşağıdaki formu kullanabilirsiniz.</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">

            <div class="col-lg-5">

                <div class="info-wrap">
                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="200">
                        <i class="bi bi-geo-alt flex-shrink-0"></i>
                        <div>
                            <h3>Adres: </h3>
                            <p>@Model.AppSetting.AddressText @Model.AppSetting.AddressDistrict /
                                @Model.AppSetting.AddressProvince</p>
                        </div>
                    </div><!-- End Info Item -->

                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="300">
                        <i class="bi bi-telephone flex-shrink-0"></i>
                        <div>
                            <h3>Telefon:</h3>
                            <p>@Model.AppSetting.PhoneNumber</p>
                        </div>
                    </div><!-- End Info Item -->

                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
                        <i class="bi bi-envelope flex-shrink-0"></i>
                        <div>
                            <h3>Eposta: </h3>
                            <p>@Model.AppSetting.Email</p>
                        </div>
                    </div><!-- End Info Item -->

                    @Html.Raw(Model.AppSetting.GoogleMap)
                </div>
            </div>

            <div class="col-lg-7">
                <form asp-controller="Home" asp-action="Contact" method="post" class="php-email-form" data-aos="fade-up"
                    data-aos-delay="200">
                    <div class="row gy-4">

                        <div class="col-md-6">
                            <label asp-for="Name" class="pb-2"></label>
                            <input asp-for="Name" class="form-control">
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Email" class="pb-2"></label>
                            <input asp-for="Email" class="form-control">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="Subject" class="pb-2"></label>
                            <input asp-for="Subject" class="form-control">
                            <span class="text-danger" asp-validation-for="Subject"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="Message" class="pb-2"></label>
                            <textarea asp-for="Message" class="form-control"></textarea>
                            <span class="text-danger" asp-validation-for="Message"></span>
                        </div>

                        <div class="col-md-12 text-center">
                            @* <div class="loading">Loading</div>
                            <div class="error-message"></div>
                            <div class="sent-message">Your message has been sent. Thank you!</div> *@

                            <button type="submit">Gönder</button>
                        </div>

                    </div>
                </form>
            </div><!-- End Contact Form -->

        </div>

    </div>

</section><!-- /Contact Section -->