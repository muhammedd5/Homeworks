@model List<Contact>
@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid pt-4 px-4">
    <div class="bg-light text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Gelen Mesajlar</h6>
            <a href="">Tüm Mesajlar</a>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-dark">
                        <th scope="col">Id</th>
                        <th scope="col">Tarih/Saat</th>
                        <th scope="col">Kimden</th>
                        <th scope="col">Konu</th>
                        <th scope="col">Durum</th>
                        <th scope="col">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contact in Model)
                    {
                        @if (contact.ContactId == null)
                        {
                            <tr>
                                <td>@contact.Id</td>
                                <td>@($"{contact.SendingTime.ToShortDateString()} {contact.SendingTime.ToShortTimeString()}")
                                </td>
                                <td>@contact.Name</td>
                                <td>@contact.Subject</td>
                                <td>@contact.IsRead</td>
                                <td>
                                    <a class="btn btn-sm btn-@(contact.IsRead?"info":"primary")" asp-area="Admin"
                                        asp-controller="Contact" asp-action="Read" asp-route-id="@contact.Id">Oku</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>