@model IEnumerable<CategoryViewModel>
@{
  ViewData["Title"] = "Kategoriler";
}

<div class="page-header d-flex justify-content-between">
  <h3 class="fw-bold mb-0">
    @(ViewBag.IsDeleted ? "Kategoriler Çöp Kutusu" : "Kategoriler")
  </h3>
  <div>
    @if (ViewBag.IsDeleted == false)
    {
      <a asp-controller="Category" asp-action="Index" asp-route-id="true" class="btn btn-danger btn-icon btn-round"
        title="Çöp Kutusunu Göster">
        <i class="fa fa-trash"></i>
      </a>
    }
    else
    {
      <a asp-controller="Category" asp-action="Index" asp-route-id="false" class="btn btn-success btn-icon btn-round"
        title="Silinmemişleri Göster">
        <i class="fas fa-check"></i>
      </a>
    }

    <a asp-controller="Category" asp-action="Create" class="btn btn-primary btn-icon btn-round"
      title="Yeni Kategori Oluştur">
      <i class="fa fa-plus"></i>
    </a>

  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table id="entity-datatables" class="display table table-striped table-hover">
            <thead>
              <tr>
                <th width="40">Id</th>
                <th>Kategori</th>
                <th width="120">İşlemler</th>
              </tr>
            </thead>
            <tbody>
              @foreach (var x in Model)
              {
                <tr>
                  <td>@x.Id</td>
                  <td>@x.Name</td>
                  <td class="text-end">
                    @if (ViewBag.IsDeleted == false)
                    {
                      <a asp-controller="Category" asp-action="Update" asp-route-id="@x.Id"
                        class="btn btn-warning btn-icon btn-round" title="Düzelt">
                        <i class="fas fa-pen"></i>
                      </a>
                      @* @await Html.PartialAsync("_CategorySoftDeletePartial", x) *@
                      <partial name="_CategorySoftDeletePartial" model="@x" />
                      <partial name="_CategoryHardDeletePartial" model="@x" />
                    }
                    else
                    {
                      <a asp-controller="Category" asp-action="SoftDelete" asp-route-id="@x.Id"
                        class="btn btn-info btn-icon btn-round" title="Geri Al">
                        <i class="fa fa-undo"></i>
                      </a>
                      <partial name="_CategoryHardDeletePartial" model="@x" />
                    }
                  </td>
                </tr>
              }

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

@section BodyBottomSection {
  <partial name="_DataTablesPartial" />
}