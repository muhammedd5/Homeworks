@model CategoryUpdateViewModel
@{
    ViewData["Title"] = "Kategori Güncelleme";
}

<form asp-controller="Category" asp-action="Update" method="post">
    <input type="hidden" asp-for="UpdatedAt" />

    <div class="page-header d-flex justify-content-between">
        <h3 class="fw-bold mb-3">Kategori Güncelleme</h3>
        <div>
            <button type="submit" class="btn btn-success btn-icon btn-round" title="Değişiklikleri Kaydet">
                <i class="fas fa-save"></i>
            </button>

            <a asp-controller="Category" asp-action="Index" class="btn btn-warning btn-icon btn-round" title="Vazgeç">
                <i class="fas fa-window-close"></i>
            </a>

        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label asp-for=Name></label>
                        <input asp-for=Name class="form-control form-control-lg" />
                    </div>
                    <div class="form-group">
                        <label asp-for=Description></label>
                        <textarea asp-for=Description class="form-control fs-5" rows="5"></textarea>
                    </div>
                    <div class="form-group">
                        <span class="text-primary lead">Son Güncellenme Tarihi: </span>
                        <span class="lead ms-3">@(Model.UpdatedAt == null ? "Bu kategori henüz hiç güncellenmemiştir." :
                            Model.UpdatedAt)</span>
                    </div>
                    <div class="form-group text-end">
                        <button type="submit" class="btn btn-success btn-icon btn-round" title="Değişiklikleri Kaydet">
                            <i class="fas fa-save"></i>
                        </button>
                    </div>

                </div>
            </div>
        </div>
    </div>

</form>